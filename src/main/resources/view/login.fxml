<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="WoF.controller.gui.LogInGUI">

    <children>
        <Label layoutX="170.0"
               layoutY="39.0"
               text="WoF Registration App">
            <font>
                <Font size="27.0" />
            </font>
        </Label>
        <Button fx:id="registerButton"
                layoutX="342.0"
                layoutY="304.0"
                mnemonicParsing="false"
                onAction="#register"
                prefHeight="25.0"
                prefWidth="186.0"
                text="Register"/>
        <TextField fx:id="forename"
                   alignment="CENTER"
                   layoutX="342.0"
                   layoutY="128.0"
                   prefHeight="25.0"
                   prefWidth="186.0"
                   promptText="Forename"
                   stylesheets="@../style/toggleValidation.css"/>
        <TextField fx:id="surname"
                   alignment="CENTER"
                   layoutX="342.0"
                   layoutY="171.0"
                   prefHeight="25.0"
                   prefWidth="186.0"
                   promptText="Surname"
                   stylesheets="@../style/toggleValidation.css"/>
        <TextField fx:id="regEmail"
                   alignment="CENTER"
                   layoutX="342.0"
                   layoutY="215.0"
                   prefHeight="25.0"
                   prefWidth="186.0"
                   promptText="Email"
                   stylesheets="@../style/toggleValidation.css"/>
        <PasswordField fx:id="regPassword"
                       alignment="CENTER"
                       layoutX="342.0"
                       layoutY="261.0"
                       prefHeight="25.0"
                       prefWidth="186.0"
                       promptText="Password"
                       stylesheets="@../style/toggleValidation.css"/>
        <TextField fx:id="loginEmail"
                   alignment="CENTER"
                   layoutX="70.0"
                   layoutY="128.0"
                   prefHeight="25.0"
                   prefWidth="186.0"
                   promptText="Email"
                   stylesheets="@../style/toggleValidation.css"/>
        <PasswordField fx:id="loginPassword"
                       alignment="CENTER"
                       layoutX="70.0"
                       layoutY="171.0"
                       prefHeight="25.0"
                       prefWidth="186.0"
                       promptText="Password"
                       stylesheets="@../style/toggleValidation.css"/>
        <Button fx:id="loginButton"
                layoutX="70.0"
                layoutY="217.0"
                mnemonicParsing="false"
                onAction="#logIn"
                prefHeight="25.0"
                prefWidth="186.0"
                text="Log In"/>
        <Label fx:id="loginLabel"
               layoutX="70.0"
               layoutY="247.0"
               text="Login failed"
               visible="false">
            <font>
                <Font name="Calibri Light Italic"
                      size="12.0" />
            </font>
        </Label>
        <Label fx:id="registerLabel"
               layoutX="342.0"
               layoutY="337.0"
               text="Registration failed"
               visible="false">
            <font>
                <Font name="Calibri Light Italic"
                      size="12.0" />
            </font>
        </Label>
        <Line endY="240.0"
              layoutX="301.0"
              layoutY="107.0"
              stroke="#ab9a9a"/>
    </children>
</AnchorPane>
